@model Transactioneer.Models.PostTransaction

@{
    ViewData["Title"] = "Post Transaction";
}
@{
    try
    {
        if (ViewBag.msg != null)
        {
            <label>@ViewBag.msg</label>
        }
    }
    catch { }
}
<h1>Post Transaction</h1>
<hr />

<div class="d-flex justify-content-center  align-items-center">
    
    <div class="row">
        <div class="col-md-12">
            <form asp-action="PostTransaction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SenderRef" class="control-label">Sender Reference</label>
                    <input asp-for="SenderRef" class="form-control" />
                    <span asp-validation-for="SenderRef" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReceiverRef" class="control-label">Receiver Reference</label>
                    <input asp-for="ReceiverRef" class="form-control" />
                    <span asp-validation-for="ReceiverRef" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Post Transaction" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
